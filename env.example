# =====================================================
# CropYieldOptimizer Environment Configuration
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# =====================================================
# Network Configuration
# =====================================================

# Sepolia Testnet RPC URL
# Get your API key from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_API_KEY

# Private Key for Deployment
# ⚠️  NEVER share this key or commit it to GitHub!
# ⚠️  Use a separate key for testnet/mainnet
# ⚠️  Remove '0x' prefix if present
PRIVATE_KEY=your_private_key_without_0x_prefix

# =====================================================
# Contract Deployment Configuration
# =====================================================

# Deployed Contract Address (fill in after deployment)
CONTRACT_ADDRESS=0xYourContractAddressHere

# =====================================================
# Etherscan Verification
# =====================================================

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key

# =====================================================
# Gateway v2.0 Configuration (FHEVM Specific)
# =====================================================

# Number of Pauser Addresses (typically 3-5)
NUM_PAUSERS=3

# Pauser Addresses (must provide NUM_PAUSERS addresses)
# These addresses can pause the contract in emergency situations
PAUSER_ADDRESS_0=0xYourFirstPauserAddress
PAUSER_ADDRESS_1=0xYourSecondPauserAddress
PAUSER_ADDRESS_2=0xYourThirdPauserAddress

# KMS (Key Management Service) Generation Number
# Start with 1 for initial deployment
KMS_GENERATION=1

# =====================================================
# Application Settings
# =====================================================

# Minimum number of farms required for collaborative analysis
MIN_FARMS_FOR_ANALYSIS=3

# Analysis fee in wei (0 for free)
ANALYSIS_FEE=0

# =====================================================
# Development Settings
# =====================================================

# Node environment (development/production)
NODE_ENV=development

# Enable debug mode
DEBUG=false

# Local Hardhat Network Port (for testing)
LOCAL_PORT=8545

# =====================================================
# Gas Configuration (Optional)
# =====================================================

# Enable gas reporting during tests
REPORT_GAS=true

# Gas price in gwei (leave empty for auto)
GAS_PRICE=

# =====================================================
# Testing Configuration (Optional)
# =====================================================

# Test timeout in milliseconds
TEST_TIMEOUT=40000

# Enable test coverage
ENABLE_COVERAGE=false

# =====================================================
# Frontend Configuration (Optional)
# =====================================================

# HTTP server port for frontend
FRONTEND_PORT=3000

# Enable CORS
ENABLE_CORS=true

# =====================================================
# SECURITY WARNINGS
# =====================================================
# ⚠️  NEVER commit your .env file to version control
# ⚠️  NEVER share your PRIVATE_KEY with anyone
# ⚠️  Use different keys for development and production
# ⚠️  Keep your Etherscan API key private
# ⚠️  Regularly rotate your keys for security
# ⚠️  Use hardware wallets for mainnet deployments
#
# Add .env to your .gitignore file:
#     echo ".env" >> .gitignore
# =====================================================

